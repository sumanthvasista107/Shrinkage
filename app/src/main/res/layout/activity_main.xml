<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/select_date"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/baseline_calendar_today_black_18dp"></androidx.appcompat.widget.AppCompatImageButton>

    <TextView
        android:id="@+id/date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:hint="DD/MM/YYYY"
        android:textColor="#000"
        android:textSize="20dp"></TextView>

    <EditText
        android:id="@+id/emp_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Employee_ID"
        android:layout_margin="30dp"
        android:inputType="number"></EditText>
    
    <Spinner
        android:id="@+id/activity_spr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:entries="@array/activity"></Spinner>


    <Spinner
        android:id="@+id/activity_description_spr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:entries="@array/activity_desc"></Spinner>


    <EditText
        android:id="@+id/start_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="left"
        android:hint="Start Time (HH:MM AM/PM)"
        android:textColor="#000"
        android:paddingRight="10dp"></EditText>

    <EditText
        android:id="@+id/end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="left"
        android:hint="End Time (HH:MM AM/PM)"
        android:paddingRight="10dp"
        android:textColor="#000"></EditText>

    <EditText
        android:id="@+id/minutes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:gravity="left"
        android:hint="Total Minutes"
        android:paddingRight="10dp"
        android:inputType="number"
        android:textColor="#000"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/Note"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textSize="15dp"
        android:paddingBottom="10dp"
        android:layout_margin="20dp"></TextView>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"></RelativeLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="10dp"
        android:text="Submit"
        android:layout_margin="15dp"
        android:textSize="16dp"></Button>

    <Button
        android:id="@+id/analysisbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="10dp"
        android:text="Analysis"
        android:layout_margin="15dp"
        android:textSize="16dp"></Button>

</LinearLayout>

</ScrollView>